{
  "manifest_version": 3,
  "name": "NanoInfluencer AI - YouTube Analytics & Email Finder",
  "version": "1.0.0",
  "description": "AI-powered YouTube influencer analysis with email discovery, audience analytics, fake follower detection, and similar channel finder. Professional-grade insights for your campaigns.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "identity.email",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.hunter.io/*",
    "https://person.clearbit.com/*",
    "https://api.socialblade.com/*",
    "http://localhost:3001/*",
    "https://*.instagram.com/*",
    "https://*.twitter.com/*",
    "https://*.tiktok.com/*",
    "https://*.facebook.com/*",
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "NanoInfluencer AI - Analyze YouTube Channel"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup/*",
        "content/*", 
        "icons/*",
        "assets/*"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3001/*",
      "https://nanoinfluencer.ai/*"
    ]
  }
}