{
  "manifest_version": 3,
  "name": "YouTube Influencer Analyzer",
  "version": "1.0.0",
  "description": "Analyze YouTube influencers with detailed metrics, find emails, and discover similar channels",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://googleapis.com/*",
    "https://api.openai.com/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "YouTube Influencer Analyzer"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/*", "content/*", "icons/*"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}